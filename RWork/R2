wspolczynnik.zmiennosci <- function(x, na.rm=FALSE) {
  if(na.rm==TRUE & is.numeric(x)){
    p<-na.omit(x)
    l<-sd(p)/mean(p)*100
    return(l)
  }
  
  if(is.numeric(x)) {
    l<-sd(x)/mean(x)*100
    return(l)
    } 
    else {
      stop('argument nie jest wartoscia liczbowa')
    }
}

